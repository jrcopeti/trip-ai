generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


enum Reason {
  family
  adventure
  romantic
  solo
  business
}

model Trip {
id Int @id @default(autoincrement())
userName String
age Int
title String?
destination String
startDate DateTime
EndDate DateTime
accommodation String
reason Reason
activities Json?
preferences Json?
notes String @db.Text
countryFlag String
createdAt  DateTime @default(now())
updatedAt DateTime @updatedAt

}


