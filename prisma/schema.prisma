generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}




model Trip {
  id Int @id @default(autoincrement())
  userName String
  age String
  nationality String
  type String
  city String
  country String
  startDate DateTime
  endDate DateTime
  luggageSize String
  accommodation String
  transport String
  requiredItems Json?
  interests String[]
  note String?
  budget String
  agreement Boolean
  weatherForecast String?
  flagUrl String
  tripUrl String
  image String?
  placeholder String?
  image2 String?
  image3 String?
  image4 String?
  image5 String?
  saved Boolean @default(false)
  title String?
  description String? @db.Text
  objectsList Json?
  mustHave String[]
  tours Json?
  createdAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

}
